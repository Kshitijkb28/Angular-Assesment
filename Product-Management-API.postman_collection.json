              "host": ["{{baseUrl}}"],
              "path": ["products", "1"]
            }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Updated Laptop",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "1099.99",
                  "type": "text"
                },
                {
                  "key": "categoryId",
                  "value": "1",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/products/1",
              "host": ["{{baseUrl}}"],
              "path": ["products", "1"]
            }
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/products/1",
              "host": ["{{baseUrl}}"],
              "path": ["products", "1"]
            }
          }
        },
        {
          "name": "Bulk Upload Products",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/products/bulk-upload",
              "host": ["{{baseUrl}}"],
              "path": ["products", "bulk-upload"]
            }
          }
        },
        {
          "name": "Generate CSV Report",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/products/report?format=csv",
              "host": ["{{baseUrl}}"],
              "path": ["products", "report"],
