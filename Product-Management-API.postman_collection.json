            "url": {
              "raw": "{{baseUrl}}/categories/1",
              "host": ["{{baseUrl}}"],
              "path": ["categories", "1"]
            }
          }
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
